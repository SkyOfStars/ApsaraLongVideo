<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/alivc_longvideo_navigation_bg_black"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/bnb_item_icon"
        android:layout_width="@dimen/alivc_common_size_icon_24"
        android:layout_height="@dimen/alivc_common_size_icon_24"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/aivc_longvideo_icon_homepage_checked" />

    <TextView
        android:id="@+id/bnb_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bnb_item_icon"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/alivc_common_font_12"
        tools:text="哈哈哈" />

    <TextView
        android:id="@+id/bnb_item_badge"
        android:layout_width="@dimen/alivc_common_height_icon_15"
        android:layout_height="@dimen/alivc_common_height_icon_15"
        android:layout_toEndOf="@id/bnb_item_icon"
        android:background="@drawable/alivc_longvideo_red_circle_cache_file_shape"
        android:gravity="center"
        android:textColor="@color/alivc_common_white"
        android:textSize="@dimen/alivc_common_font_8"
        tools:ignore="SmallSp"
        tools:text="99+"
        android:layout_toRightOf="@id/bnb_item_icon" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/alivc_common_margin_10"
        android:layout_marginRight="@dimen/alivc_common_margin_10"
        app:cardBackgroundColor="@color/alivc_common_bg_black"
        app:cardCornerRadius="@dimen/alivc_common_radius_6"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/alivc_common_height_group_210">

            <ImageView
                android:id="@+id/alivc_iv_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/alivc_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/alivc_common_margin_10"
                android:layout_marginLeft="@dimen/alivc_common_margin_10"
                android:layout_marginRight="@dimen/alivc_common_margin_10"
                android:layout_marginBottom="@dimen/alivc_common_margin_20"
                android:layout_toStartOf="@+id/alivc_tv_duration"
                android:layout_toLeftOf="@+id/alivc_tv_duration"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="start"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="@dimen/alivc_common_font_18" />

            <TextView
                android:id="@+id/alivc_tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/alivc_common_margin_10"
                android:layout_marginRight="@dimen/alivc_common_margin_10"
                android:layout_marginBottom="@dimen/alivc_common_margin_14"
                android:background="@drawable/alivc_longvideo_bg_transparent_black"
                android:paddingLeft="@dimen/alivc_common_padding_6_5"
                android:paddingTop="@dimen/alivc_common_margin_3"
                android:paddingRight="@dimen/alivc_common_padding_6_5"
                android:paddingBottom="@dimen/alivc_common_margin_3"
                android:textColor="@color/alivc_common_bg_white"
                android:textSize="@dimen/alivc_common_font_12" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
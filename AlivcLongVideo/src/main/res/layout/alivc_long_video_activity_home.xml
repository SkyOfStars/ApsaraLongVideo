<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlivcHomeActivity">

    <com.aliyun.svideo.common.bottomnavigationbar.BottomNavigationBar
        android:id="@+id/alivc_bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_common_size_icon_48"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:bnb_anim="false"
        app:bnb_layoutId="@layout/alivc_long_video_bnb_item_view"
        app:bnb_scale_ratio="1.1"
        app:bnb_selectedColor="@color/alivc_common_font_red_wine"
        app:bnb_unSelectedColor="@color/alivc_longvideo_font_black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/alivc_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/alivc_bottomNavigationBar" />


</RelativeLayout>